<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotEkle.view.NotEkleActivity">

    <EditText
        android:id="@+id/baslik_et"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:ems="10"
        android:hint="Not Başlık"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/aciklama_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:hint="Not Açıklama"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/guncelle_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslik_et" />

    <TextView
        android:id="@+id/tarih_tv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="Tarih"
        app:layout_constraintBottom_toBottomOf="@+id/baslik_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/baslik_et"
        app:layout_constraintTop_toTopOf="@+id/baslik_et"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/guncelle_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Güncelle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>